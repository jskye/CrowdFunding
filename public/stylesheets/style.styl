body
  padding-bottom 20px
  padding-top 20px

.header, .marketing, .footer
  padding-left 15px
  padding-right 15px
  padding-left 0
  padding-right 0

.header
  border-bottom 1px solid #E5E5E5
  margin-bottom 30px
  h3
    line-height 40px
    margin-bottom 0
    margin-top 0
    padding-bottom 19px

.footer
  border-top 1px solid #E5E5E5
  color #777777
  padding-top 19px

.container-narrow
  margin 0 auto
  max-width 700px
  & > hr
    margin 30px 0

.jumbotron
  border-bottom 1px solid #E5E5E5
  text-align center
  border-bottom 0 none
  .btn
    font-size 21px
    padding 14px 24px

.marketing
  margin 40px 0
  p
    & + h4
      margin-top 28px

